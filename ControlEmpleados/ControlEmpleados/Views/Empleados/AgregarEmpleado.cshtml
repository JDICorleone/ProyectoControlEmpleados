@model ControlEmpleados.Entities.Empleado

@{
    ViewData["Title"] = "Empleado";
}

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 400px;">
        <div class="card-header text-center">

            @if (Model.ID_EMPLEADO != 0)
            {
                <h5>Editar Empleado</h5>
            }
            else
            {
                <h5>Agregar Empleado</h5>
            }


        </div>
        <div class="card-body card">
            <form method="post" asp-controller="Empleados" asp-action="AgregarEmpleado">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="NOMBRE">Nombre:</label>
                            <input type="text" class="form-control" id="NOMBRE" name="NOMBRE" value="@Model.NOMBRE" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="PRIMER_APELLIDO">Primer Apellido:</label>
                            <input type="text" class="form-control" id="PRIMER_APELLIDO" name="PRIMER_APELLIDO" value="@Model.PRIMER_APELLIDO" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="SEGUNDO_APELLIDO">Segundo Apellido:</label>
                            <input type="text" class="form-control" id="SEGUNDO_APELLIDO" name="SEGUNDO_APELLIDO" value="@Model.SEGUNDO_APELLIDO" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="CEDULA">Cédula:</label>
                            <input type="number" class="form-control" id="CEDULA" name="CEDULA" value="@Model.CEDULA" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="PAGO_POR_HORA">Pago por Hora:</label>
                            <input type="number" class="form-control" id="PAGO_POR_HORA" name="PAGO_POR_HORA" value="@Model.PAGO_POR_HORA" required>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="VACACIONES_DISPONIBLES">Vacaciones Disponibles:</label>
                            <input type="number" class="form-control" id="VACACIONES_DISPONIBLES" name="VACACIONES_DISPONIBLES" value="@Model.VACACIONES_DISPONIBLES" required>
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="FECHA_DE_INGRESO">Fecha de Ingreso:</label>
                            @{
                                string fechaIngreso = Model.FECHA_DE_INGRESO.ToString("yyyy-MM-dd");
                            }
                            @if (Model.ID_EMPLEADO != 0)
                            {
                                <input type="date" class="form-control" id="FECHA_DE_INGRESO" name="FECHA_DE_INGRESO" value="@fechaIngreso" required>
                            }
                            else
                            {
                                <input type="date" class="form-control" id="FECHA_DE_INGRESO" name="FECHA_DE_INGRESO" required>
                            }
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="ID_HORARIO">Horario:</label>
                            @if (Model.ID_EMPLEADO != 0)
                            {
                                <select class="form-control" id="ID_HORARIO" name="ID_HORARIO" required>
                                    <option value="1" selected="@(Model.ID_HORARIO == 1)">Diurno</option>
                                    <option value="2" selected="@(Model.ID_HORARIO == 2)">Nocturno</option>
                                    <option value="3" selected="@(Model.ID_HORARIO == 3)">Mixto</option>
                                </select>
                            }
                            else
                            {
                                <select class="form-control" id="ID_HORARIO" name="ID_HORARIO" required>
                                    <option value="">Seleccione</option>
                                    <option value="1">Diurno</option>
                                    <option value="2">Nocturno</option>
                                    <option value="3">Mixto</option>
                                </select>
                            }
                        </div>
                    </div>
                </div>


                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="ID_PERIODO">Período de Pago:</label>
                            @if (Model.ID_EMPLEADO != 0)
                            {
                                <select class="form-control" id="ID_PERIODO" name="ID_PERIODO" required>
                                    <option value="1" selected="@(Model.ID_PERIODO == 1)">Semanal</option>
                                    <option value="2" selected="@(Model.ID_PERIODO == 2)">Quincenal</option>
                                    <option value="3" selected="@(Model.ID_PERIODO == 3)">Mensual</option>
                                </select>
                            }
                            else
                            {
                                <select class="form-control" id="ID_PERIODO" name="ID_PERIODO" required>
                                    <option value="">Seleccione</option>
                                    <option value="1">Semanal</option>
                                    <option value="2">Quincenal</option>
                                    <option value="3">Mensual</option>
                                </select>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="ID_PUESTO">Puesto:</label>
                            @if (Model.ID_EMPLEADO != 0)
                            {
                                <select class="form-control" id="ID_PUESTO" name="ID_PUESTO" required>
                                    <option value="1" selected="@(Model.ID_PUESTO == 1)">Agente de ventas</option>
                                    <option value="2" selected="@(Model.ID_PUESTO == 2)">Supervisor</option>
                                    <option value="3" selected="@(Model.ID_PUESTO == 3)">DevOps</option>
                                </select>
                            }
                            else
                            {
                                <select class="form-control" id="ID_PUESTO" name="ID_PUESTO" required>
                                    <option value="">Seleccione</option>
                                    <option value="1">Agente de ventas</option>
                                    <option value="2">Supervisor</option>
                                    <option value="3">DevOps</option>
                                </select>
                            }
                        </div>
                    </div>
                </div>

                @if (Model.ID_USUARIO == 0)
                {
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="ID_USUARIO">Usuario:</label>
                                <select class="form-control" id="ID_USUARIO" name="ID_USUARIO" required>
                                    <option value="">Seleccione</option>
                                    @foreach (var usuario in ViewBag.Usuarios)
                                    {
                                        var empleadoAsociado = false;
                                        foreach (var empleado in ViewBag.Empleados)
                                        {
                                            if (empleado.ID_USUARIO == usuario.ID_USUARIO)
                                            {
                                                empleadoAsociado = true;
                                                break;
                                            }
                                        }

                                        if (!empleadoAsociado)
                                        {
                                            <option value="@usuario.ID_USUARIO">@usuario.CORREO</option>
                                        }
                                    }

                                </select>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ID_USUARIO">Usuario:</label>
                                <select class="form-control" id="ID_USUARIO" name="ID_USUARIO" required>
                                    @foreach (var usuario in ViewBag.Usuarios)
                                    {
                                        var empleadoAsociado = false;
                                        foreach (var empleado in ViewBag.Empleados)
                                        {
                                            if (empleado.ID_USUARIO == usuario.ID_USUARIO)
                                            {
                                                empleadoAsociado = true;
                                                break;
                                            }
                                        }

                                        if (!empleadoAsociado)
                                        {
                                            <option value="@usuario.ID_USUARIO">@usuario.CORREO</option>
                                        }
                                    }


                                    @foreach (var usuario in ViewBag.Usuarios)
                                    {
                                        if (usuario.ID_USUARIO == Model.ID_USUARIO)
                                        {
                                            <option value="@usuario.ID_USUARIO" selected>@usuario.CORREO</option>
                                            break;
                                        }
                                    }

                                </select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ID_ESTADO">Estado:</label>
                                <select class="form-control" id="ID_ESTADO" name="ID_ESTADO" required>

                                    <option value="1" selected="@(Model.ID_ESTADO == 1)">Activo</option>
                                    <option value="0" selected="@(Model.ID_ESTADO == 0)">Inactivo</option>
                                </select>

                            </div>


                        </div>
                    </div>

                }

                





                <br />
                <div class="text-center">
                    @if (Model.ID_EMPLEADO != 0)
                    {
                        <button type="submit" class="btn btn-primary">Editar</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary">Agregar</button>
                    }
                    <a onclick="window.location='@Url.Action("ConsultarEmpleados", "Empleados")'" class="btn btn-secondary" style="background-color:coral">Volver</a>
                </div>
            </form>

            @{
                if (@ViewBag.mensaje == "OK")
                {
                    @Html.Raw("<script> $(document).ready(function() {\r\n alertaRegistro();\r\n }); </script>")
                    ;
                }


                if (@ViewBag.mensaje == "OK.")
                {
                    @Html.Raw("<script> $(document).ready(function() {\r\n alertaEdit();\r\n }); </script>")
                    ;
                }

                if (@ViewBag.Alerta == "ERROR")

                {
                    @Html.Raw("<script> $(document).ready(function() {\r\n alertaCorreo();\r\n }); </script>")
                    ;
                }
            }
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function () {
        const cedulaInput = document.getElementById("CEDULA");
        const VaInput = document.getElementById("VACACIONES_DISPONIBLES");

        cedulaInput.addEventListener("input", function () {
            const maxLength = 9;
            if (this.value.length > maxLength) {
                this.value = this.value.slice(0, maxLength);
            }
        });

        VaInput.addEventListener("input", function () {
            const maxLength = 3;
            if (this.value.length > maxLength) {
                this.value = this.value.slice(0, maxLength);
            }
        });

    });

    function alertaRegistro() {

        Swal.fire({
            position: 'top-center',
            icon: 'success',
            title: 'El empleado se registró exitosamente!',
            showConfirmButton: true

        })
        setTimeout(function () {
            window.location.href = "/Empleados/ConsultarEmpleados";
        }, 3000);


    }

    function alertaEdit() {

        Swal.fire({
            position: 'top-center',
            icon: 'success',
            title: 'Los datos del empleado se actualizaron correctamente!',
            showConfirmButton: true

        })
        setTimeout(function () {
            window.location.href = "/Empleados/ConsultarEmpleados";
        }, 3000);
    }

    function alertaCorreo() {

        Swal.fire({
            position: 'top-center',
            icon: 'error',
            title: 'El correo electrónico que ingresó, ya se encuentra registrado.',
            showConfirmButton: true
        }).then((result) => {
            if (result.isConfirmed) {
                document.getElementById("CORREO").value = "";
                document.getElementById("PASSWORD").value = "";
            }
        });
    }

</script>
